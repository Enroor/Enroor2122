  <script>
    $(document).ready(function () {
        $("select").change(function () {
        //Obtenemos el valor de option
          var cam = $(this).val();
          //Obtenemos la fila y buscamos el span
          const rows = $(this).parents("tr").find("span");

          if (cam == 2) {
            rows.text("Pierna");
          } else if (cam == 3) {
            rows.text("Desconocido");
          } else if (cam == 4) {
            rows.text("Golpe");
          } else {
            rows.text("");
          }
        });
    });
  </script>
